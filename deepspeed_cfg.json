{
  "train_batch_size": 720,
  "gradient_accumulation_steps": 8,
  "fp16": {
    "enabled": true,
    "initial_scale_power": 24,
    "min_loss_scale": 0.001
  },
  "zero_optimization": {
    "stage": 0
  },
  "tensorboard": {
      "enabled": true,
      "output_path": "runs/",
      "job_name": "transfusion-1"
  },
  "gradient_clipping": 10.0,
  "scheduler": {
    "type": "WarmupLR",
    "params": {
        "warmup_min_lr": 0,
        "warmup_max_lr": 3e-5,
        "warmup_num_steps": 10000,
        "warmup_type": "linear"
    }
  },
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8
    }
  }
}
